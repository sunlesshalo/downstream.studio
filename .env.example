# DownStream - Environment Variables
# Copy to .env and fill in your values

# === Image Generation (Google Gemini) ===
# Get from: https://aistudio.google.com/app/apikey
GOOGLE_AI_API_KEY=your_google_ai_api_key

# === Video Generation (Replicate) ===
# Get from: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=your_replicate_api_token

# === Deployment (Vercel) ===
# Get from: https://vercel.com/account/tokens
VERCEL_TOKEN=your_vercel_token

# === Payments (Stripe) ===
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# === Email (Resend) ===
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key
# Get from: Resend webhook settings (signing secret)
RESEND_WEBHOOK_SECRET=whsec_your_webhook_secret
FROM_EMAIL=hello@downstream.ink

# Owner email for operational digests
OWNER_EMAIL=your_email@example.com

# === GitHub API (for webhook job creation) ===
# Get from: https://github.com/settings/tokens (needs repo write access)
GITHUB_TOKEN=ghp_your_github_token

# === Discord Notifications ===
# Create a webhook in your Discord channel: Server Settings > Integrations > Webhooks
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_id/your_webhook_token

# === Director Dashboard ===
# Secret key for session encryption (generate with: python -c "import secrets; print(secrets.token_hex(32))")
DIRECTOR_SECRET_KEY=your_random_32_byte_hex_key_here
# Database path for director dashboard
DIRECTOR_DB_PATH=/var/lib/downstream/director.db
